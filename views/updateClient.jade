!!!
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href='http://fonts.googleapis.com/css?family=Raleway:100', rel='stylesheet', type='text/css')
  body#portfolio
    #menu
      h1 PLD Construction + Development
      ul
        li 
          a(href="/") Home
        li 
          a(href="/about") About
        li 
          a(href="/gallery") Gallery
        li 
          a(href="/services") Services
        li 
          a(href="/portfolio") Portfolio
        li 
          a(href="/contact") Contact
    h1=name
    form.cmxform(action="/update/"+name.replace(/\s/g, '_'), method="post")
      fieldset
        legend ENTER INFO TO CREATE AN UPDATE - all details optional
        ol
          li
            label Header:
            input(type="text", name="header") #{update.header}
          li
            label Completed::
            textarea(name="completed")  #{update.completed}
          li
            label Scheduled:
            textarea(name="scheduled") #{update.scheduled}
          li
            label Notes or Comments:
            textarea(name="notes") #{update.notes}
        input(type="hidden", id= "date", name="date", value='')
        input(type="hidden", name="name", value=name)
        input(type="hidden", name="index", value=index)
        input(type="submit", id="submit", value="Save Update")
    #pip
      p Add Image: 
        form(action="http://api2.transloadit.com/assemblies", id="MyForm", enctype="multipart/form-data", method="POST")
          input(type="hidden", name="params", value=JSON.stringify(tranny))
          input(type="hidden", name="name", value=name.replace(/\s/g, '_'))
          input(type="hidden", name="index", value=index)
          input(type="file", name="my_file", id="file")
          input(type="submit", class="m200", value="Upload Image")
          div#progress
      - if (update.img && update.img.large)
        #uploaded
          img(src="../../"+update.img.large, class="preview")
      - else
        #uploaded
  script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js')
  script(type="text/javascript", src="http://assets.transloadit.com/js/jquery.transloadit2.js")
  script(type="text/javascript", src="/js/portfolio.js")
  script(type="text/javascript")
    document.getElementById('date').value = new Date().getMonth()+1+'/'+new Date().getDate()+'/'+new Date().getFullYear()